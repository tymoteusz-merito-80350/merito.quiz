<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeritoQuiz.Pages.Result"
             Title="Wynik">
    
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>
    
    <ScrollView>
        <VerticalStackLayout 
            Padding="30,30"
            Spacing="25">
            <Border Style="{StaticResource Section}">
                <VerticalStackLayout>
                    <Label Style="{StaticResource Headline}" Text="Gratulacje!" />
                    <Label Text="Udało ci się ukończyć quiz!" Margin="0, 0, 0, 16" />
                    
                    <Button 
                        x:Name="ReturnButton"
                        Text="Powrót do wyboru quizu" 
                        HorizontalOptions="Fill"
                        Clicked="ReturnButton_OnClicked"/>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>