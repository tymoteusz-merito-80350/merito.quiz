<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MeritoQuiz.Models"
             x:Class="MeritoQuiz.Views.CategoryView" x:DataType="models:Category">
    
    <ContentView.Resources>
        <ResourceDictionary>
            <Style TargetType="Border">
                <Setter Property="BackgroundColor" 
                        Value="{AppThemeBinding 
                        Light={StaticResource SurfaceBackground}, 
                        Dark={StaticResource SurfaceBackgroundDark}}" />
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="Black" Opacity="0.3" Radius="12" />
                    </Setter.Value>
                </Setter>
                <Setter Property="Padding" Value="0, 50" />
            </Style>
            
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextOnSurface}, Dark={StaticResource TextOnSurfaceDark}}" />
                <Setter Property="FontFamily" Value="OpenSansRegular"/>
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>

    <Border>
        <Grid ColumnDefinitions="Auto,*" Padding="0,6">
            <!--<Image Source="{DynamicResource {Binding Icon}}" VerticalOptions="Center" />-->
            <Label Grid.Column="1" Text="{Binding Name}" HorizontalOptions="Center" />
        </Grid>
        <Border.GestureRecognizers>
            <TapGestureRecognizer 
                Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.OptionSelectedCommand}"
                CommandParameter="{Binding .}" />
        </Border.GestureRecognizers>
    </Border>
</ContentView>