<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MeritoQuiz.ViewModels"
             x:Class="MeritoQuiz.Views.AnswerOptionView"
             x:DataType="viewModels:AnswerOption">
    <Grid ColumnDefinitions="Auto,*" Padding="0,6">
        <CheckBox IsChecked="{Binding IsSelected}" VerticalOptions="Center" />
        <Label Grid.Column="1" Text="{Binding Text}" VerticalOptions="Center" />
    </Grid>
</ContentView>